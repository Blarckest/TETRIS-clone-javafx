<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Text?>

<?import javafx.scene.image.Image?>
<?import java.net.URL?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="view.MainWindow"
            prefHeight="800" prefWidth="500"
            minHeight="500" minWidth="400">
   <top>
     <Text styleClass="gameOver" textAlignment="CENTER" BorderPane.alignment="CENTER">
            TETRIS!

        </Text>
   </top>
   <bottom>
      <BorderPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <bottom>
           <Button fx:id="seeScoreButton" alignment="BASELINE_CENTER" onAction="#goToScore" text="Scores" BorderPane.alignment="CENTER" />
         </bottom>
         <top>
           <Button fx:id="playButton" alignment="BASELINE_CENTER" onAction="#launchGame" text="PLAY!" BorderPane.alignment="CENTER" />
         </top>
      </BorderPane>
   </bottom>
   <center>
       <ImageView>
           <Image url="/img/img.png"/>
       </ImageView>
   </center>
    <stylesheets>
        <URL value="@style.css"/>
    </stylesheets>

</BorderPane>
