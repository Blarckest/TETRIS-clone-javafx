<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<?import java.net.URL?>
<Pane fx:controller="view.GameView"
      xmlns:fx="http://javafx.com/fxml">
<GridPane fx:id="brickPanel" vgap="1" hgap="1"/>
<BorderPane styleClass="gameBoard" fx:id="gameBoard">
    <center>
        <GridPane fx:id="gamePanel" hgap="1" vgap="1" layoutY="30" layoutX="40"/>
    </center>
</BorderPane>

<VBox layoutX="243" layoutY="20" alignment="CENTER" styleClass="vbox">
    <VBox alignment="CENTER">
        <Label text="Score:" styleClass="scoreClass"/>
        <Text text="Text" fx:id="scoreValue" styleClass="scoreClass"/>
    </VBox>
    <VBox alignment="CENTER">
        <Label text="Next brick" styleClass="nextBrickLabel"/>
        <BorderPane styleClass="nextBrick" prefWidth="100" prefHeight="70" maxWidth="100">
            <center>
                <GridPane fx:id="nextTetroPreview" alignment="CENTER" hgap="1" vgap="1"/>
            </center>
        </BorderPane>
    </VBox>
    <ToggleButton text="Pause" styleClass="ipad-dark-grey" onAction="#pauseGame" prefWidth="140"
                  fx:id="pauseButton"/>
    <VBox fx:id="helpBox">

        <Text styleClass="helpInfo" wrappingWidth="150">
            <![CDATA[
                Use arrow keys (←, ↑, →, ↓) or (Q,S,D,Z) keys for movement and rotating.
                ]]>
        </Text>
        <Text styleClass="helpInfo" wrappingWidth="150">
            <![CDATA[
                N - start new game.
                ]]>
        </Text>
        <Text styleClass="helpInfo" wrappingWidth="150">
            <![CDATA[
                P - pause/resume.
                ]]>
        </Text>

    </VBox>
    <Button fx:id="backButton" onAction="#goToMenu" text="Retour" />
</VBox>
<stylesheets>
    <URL value="@style.css"/>
</stylesheets>
</Pane>