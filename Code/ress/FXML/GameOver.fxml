<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<?import java.net.URL?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="view.GameOver"
      prefHeight="800" prefWidth="500">
    <Text styleClass="gameOver">GAME OVER</Text>
    <HBox>
        <Text styleClass="scoreClass">Score: </Text>
        <Text fx:id="scoreValue" styleClass="scoreClass"/>
    </HBox>
    <Button fx:id="restartButton" onAction="#restartGame" text="Rejouer"/>
    <Button fx:id="scoreButton" onAction="#goToScore" text="Voir scores"/>
    <Button fx:id="quitButton" onAction="#quitGame" text="Quitter"/>
    <stylesheets>
        <URL value="@style.css"/>
    </stylesheets>
</VBox>
