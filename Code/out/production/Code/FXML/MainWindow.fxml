<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<?import java.net.URL?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="view.MainWindow"
      prefHeight="800" prefWidth="500">
    <Text textAlignment="CENTER">
        TETRIS!
    </Text>
    <Button fx:id="playButton" onAction="#launchGame" text="PLAY!" alignment="BASELINE_CENTER"/>
    <Button fx:id="seeScoreButton" onAction="#goToScore" text="Scores" alignment="BASELINE_CENTER"/>
    <stylesheets>
        <URL value="@style.css"/>
    </stylesheets>
</VBox>